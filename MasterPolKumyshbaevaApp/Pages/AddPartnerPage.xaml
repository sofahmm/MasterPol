<Page x:Class="MasterPolKumyshbaevaApp.Pages.AddPartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPolKumyshbaevaApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPartnerPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Column="1"
               Grid.ColumnSpan="4"
               Content="Добавление нового партнера"
               FontSize="30"
               FontWeight="DemiBold"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>
        <TextBlock Grid.ColumnSpan="3"
                   Grid.Row="1"
                   Text="Наименование партнера"
                   FontSize="24"
                   HorizontalAlignment="Center"/>
        <TextBox x:Name="NamePartnerTb"
                 Grid.ColumnSpan="3"
                 Grid.Row="2"
                 Margin="20 5"
                 FontSize="22"
                 Padding="5 0"/>
        <TextBlock Grid.ColumnSpan="3"
                   Grid.Row="3"
                   Text="Тип партнера"
                   FontSize="24"
                   HorizontalAlignment="Center"/>
        <!--Заполняем свойство ItemsSource и Text в TextBlock, 
        чтобы элемент знал откуда ему выводить список
        в ItemsSource нужно передать 
        ИМЯ ДИНАМИЧЕСКОГО МАССИВА ИЗ КОДА, не имя таблицы!!
        в свойство Text передаем имя столбца из БД 
        который хотим вывести!!-->
        <ComboBox Grid.ColumnSpan="3"
                  Grid.Row="4"
                  Margin="20 5"
                  FontSize="22"
                  x:Name="TypePartnerCmb"
                  ItemsSource="{Binding typePartners}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Grid.ColumnSpan="3"
                   Grid.Row="5"
                   Text="Рейтинг"
                   FontSize="24"
                   HorizontalAlignment="Center"/>
        <TextBox x:Name="RaitingTb"
                 Grid.ColumnSpan="3"
                 Grid.Row="6"
                 Margin="20 5"
                 FontSize="22"
                 Padding="5 0"/>
        <TextBlock Grid.ColumnSpan="3"
                   Grid.Row="7"
                   Text="Адрес"
                   FontSize="24"
                   HorizontalAlignment="Center"/>
        <TextBox x:Name="AddresTb"
                 Grid.ColumnSpan="3"
                 Grid.Row="8"
                 Margin="20 5"
                 FontSize="22"
                 Padding="5 0"/>
        <TextBlock Grid.ColumnSpan="3"
                   Grid.Row="1"
                   Grid.Column="3"
                   Text="ФИО директора"
                   FontSize="24"
                   HorizontalAlignment="Center"/>
        <TextBox x:Name="SNPdirectorTb"
                 Grid.ColumnSpan="3"
                 Grid.Row="2"
                 Grid.Column="3"
                 Margin="20 5"
                 FontSize="22"
                 Padding="5 0"/>
        <TextBlock Grid.ColumnSpan="3"
                   Grid.Row="3"
                   Grid.Column="3"
                   Text="Телефон компании"
                   FontSize="24"
                   HorizontalAlignment="Center"/>
        <TextBox x:Name="NumberPhoneTb"
                 Grid.ColumnSpan="3"
                 Grid.Column="3"
                 Grid.Row="4"
                 Margin="20 5"
                 FontSize="22"
                 Padding="5 0"/>
        <TextBlock Grid.ColumnSpan="3"
                   Grid.Row="5"
                   Grid.Column="3"
                   Text="Email компании"
                   FontSize="24"
                   HorizontalAlignment="Center"/>
        <TextBox x:Name="EmailTb"
                 Grid.ColumnSpan="3"
                 Grid.Column="3"
                 Grid.Row="6"
                 Margin="20 5"
                 FontSize="22"
                 Padding="5 0"/>
        <Button Grid.Column="3"
                Grid.Row="7"
                Grid.RowSpan="3"
                Grid.ColumnSpan="3"
                Margin="110 30"
                Content="Сохранить"
                FontSize="22"
                x:Name="SavePartnerBtn"
                Click="SavePartnerBtn_Click"/>
    </Grid>
</Page>
